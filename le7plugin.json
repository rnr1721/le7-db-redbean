{
    "description": "Plugin that integrate RedbeanPHP ORM in Le7 PHP MVC framework",
    "update_description": "will be created config and container item if not exists",
    "run": "init.php",
    "copy": {
        "{plugin_root}/dist/db_redbean.php": "{project_root}/config/db_redbean.php",
        "{plugin_root}/dist/dbRedbeanConf.php": "{project_root}/container/dbRedbeanConf.php"
    },
    "dir": {
        "Models":"{project_root}/Model"
    },
    "remove": {
        "Redbean container config":"{project_root}/container/dbDoctrineConf.php",
        "Redbean config":"{project_root}/config/db_doctrine.php"
    }
}
